<h1>My Favorites</h1>
<p><%- messages() %></p>

<% if (favorites && favorites.length > 0) { %>
  <ul>
    <% favorites.forEach(fav => { %>
      <li>
        <strong><%= fav.inv_year %> <%= fav.inv_make %> <%= fav.inv_model %></strong> - $<%= fav.inv_price %>
        <form method="POST" action="/favorites/remove/<%= fav.favorite_id %>" style="display:inline;">
          <input type="hidden" name="favorite_id" value="<%= fav.favorite_id %>">
          <button type="submit">Remove</button>
        </form>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>You have no saved favorites yet.</p>
<% } %>
