
  <h1><%= title %></h1>
    
    

    
    <div class="login-container">
        <form action="/account/registration" method="POST">
        
        <label for="fname">First name<span class="mustfill">*</span></label>
        <input type="text" id="fname" name="account_firstname" required>

        <label for="lname">Last Name<span class="mustfill">*</span></label>
        <input type="text" id="lname" name="account_lastname" required>

        <label for="email">Email<span class="mustfill">*</span></label>
        <input type="email" id="email" name="account_email" required>

        <label for="password">Password<span class="mustfill">*</span></label>
        <input type="password" id="password" name="account_password" required>
        <!-- <span id="pswbtn">Show</span> -->

        <button type="submit">Login</button>
        </form>


    </div>



