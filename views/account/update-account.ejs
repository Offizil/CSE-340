<h1><%= title %></h1>

<!-- Display Errors -->
<% if (errors && errors.length > 0) { %>
  <ul class="errors">
    <% errors.forEach(function(error) { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Display Messages -->
<p><%- messages() %></p>

<!-- Account Update Form -->
<section class="account-update">
  <h2>Account Update</h2>
  <form class="acctUpdate-form" method="post" action="/account/update-info" id="update-info-form">
    <input type="hidden" name="account_id" value="<%= account.account_id %>">

    <!-- First Name -->
    <label for="account_firstname">First Name</label>
    <input type="text" id="account_firstname" name="account_firstname" value="<%= account.account_firstname %>" required>

      <!-- last Name -->
    <label for="account_lastname">Last Name</label>
    <input type="text" id="account_lastname" name="account_lastname" value="<%= account.account_lastname %>" required>

    <!-- Email -->
    <label for="account_email">Email</label>
    <input type="email" id="account_email" name="account_email" value="<%= account.account_email %>" required>

    <button type="submit">Update Info</button>
  </form>
</section>

<!-- Change Password Form -->
<section class="change-password">
  <h2>Change Password</h2>
  <p>Enter a new password to replace your current one. Passwords must be at least 12 characters and include at least 1 uppercase letter, 1 lowercase letter, 1 number, and 1 special character.</p>

  <form class="acctUpdate-form" id="change-password-form" method="post" action="/account/update-password" id="update-password-form">
    <input type="hidden" name="account_id" value="<%= account.account_id %>">

    <label for="account_password">New Password</label>
    <input type="password" id="account_password" name="account_password" required>

    <button type="submit">Change Password</button>
  </form>
</section>

