<!-- Task 1 -->
<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>

  <div id="tools">
    <% if (locals.loggedin) { %>
      <!-- Visible only when logged in -->
      <a href="/account" title="Go to account management">
        Welcome <%= locals.accountData?.account_firstname || 'User' %>
      </a>
      <a href="/account/logout" title="Click to log out">Logout</a>
    <% } else { %>
      <!-- Visible only when logged out -->
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>
